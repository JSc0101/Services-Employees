# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# TypeScript files
[*.{ts,tsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript files
[*.{js,mjs}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
trim_trailing_whitespace = true
insert_final_newline = true
